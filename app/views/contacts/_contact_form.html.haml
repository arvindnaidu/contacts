= form_tag target_url, {:method => form_post_method, :class => "form-horizontal", :role => "form"} do
  .form-group
    %label.control-label.col-md-2{:for => "name"} Name:
    .col-md-6
      %input#pwd.form-control{:placeholder => "Enter your name", :type => "text", :name => "contact[name]", :value => @contact.name}
  .form-group
    %label.control-label.col-md-2{:for => "email"} Email:
    .col-md-6
      %input#email.form-control{:placeholder => "Enter your email", :type => "email", :name => "contact[email]", :value => @contact.email}
  .form-group
    %label.control-label.col-md-2{:for => "mobile"} Mobile:
    .col-md-6
      %input#pwd.form-control{:placeholder => "Enter your mobile number", :type => "text", :name => "contact[mobile]", :value => @contact.mobile}
  .form-group
    %label.control-label.col-md-2{:for => "dob"} Date of Birth:
    .col-md-6
      %input#pwd.form-control{:placeholder => "Enter your date of birth", :type => "text", :name => "contact[dob]", :value => @contact.dob}
  .form-group
    %label.control-label.col-md-2{:for => "gender"} Gender:
    .col-md-6
      .checkbox
        %label.pdl-0
          %input{:type => "radio", :name => "contact[gender]", :value => "1", :checked => (@contact.gender ? true : nil)} &nbsp; Male
        %label
          %input{:type => "radio", :name => "contact[gender]", :value => "0", :checked => (@contact.gender ? nil : true)} &nbsp; Female

  %h4.title-label Address
  %hr
  .form-group
    %label.control-label.col-md-2{:for => "city"} City:
    .col-md-6
      %input#pwd.form-control{:placeholder => "Enter your city", :type => "text", :name => "contact[city]", :value => @contact.city}
  .form-group
    %label.control-label.col-md-2{:for => "state"} State:
    .col-md-6
      %input#pwd.form-control{:placeholder => "Enter your state", :type => "text", :name => "contact[state]", :value => @contact.state}
  .form-group
    %label.control-label.col-md-2{:for => "country"} Country:
    .col-md-6
      %input#pwd.form-control{:placeholder => "Enter your country", :type => "text", :name => "contact[country]", :value => @contact.country}
  .form-group
    %label.control-label.col-md-2{:for => "zip"} Zip:
    .col-md-6
      %input#pwd.form-control{:placeholder => "Enter your zip", :type => "text", :name => "contact[zip]", :value => @contact.zip}
  %hr
  .form-group
    .col-md-offset-2.col-md-10
      %button.btn.btn-default.save{:type => 'submit'} Save
      &nbsp;
      %button.btn.btn-default.cancel Cancel
