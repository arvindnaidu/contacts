                %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :role => "button"}
                  Account
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "#/settings"} Settings
